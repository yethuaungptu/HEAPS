<!DOCTYPE html>
<html data-theme="winter">
  <head>
    <title>Sustainable Living Guide</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/aos.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <% include ./partial/navbar.ejs %>
    <div class="aos-all">
      <div class="text-3xl text-center mt-3 text-primary">University List</div>
      <div class="grid grid-cols-1 lg:grid-cols-3 m-3 gap-6">
        <% for(var i = 0; i < university.length; i++){%>
        <div class="card bg-base-100 w-96 shadow-sm">
          <figure class="px-10 pt-10">
            <img
              src="<%= university[i].image %>"
              alt="University List"
              class="rounded-xl"
            />
          </figure>
          <div class="card-body items-center text-center">
            <h2 class="card-title"><%= university[i].name %></h2>
            <p><%= university[i].region %></p>
            <div class="card-actions">
              <a
                href="/university/<%= university[i]._id %>"
                class="btn btn-primary"
                >Detail</a
              >
            </div>
          </div>
        </div>
        <%}%>
      </div>
    </div>
    <% include ./partial/footer.ejs %>
  </body>
  <script src="/javascripts/aos.js"></script>
  <script>
    AOS.init({
      mirror: true,
    });
  </script>
</html>
