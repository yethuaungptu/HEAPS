<!DOCTYPE html>
<html data-theme="winter">
  <head>
    <title>Higher Eduction Access Prediction System</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div id="root">
      <div class="drawer lg:drawer-open">
        <input id="left-sidebar-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
          <div class="navbar sticky top-0 bg-base-100 z-10 shadow-md">
            <div class="flex-1">
              <label
                for="left-sidebar-drawer"
                class="btn btn-primary drawer-button lg:hidden"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                  class="h-5 inline-block w-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                  ></path>
                </svg>
              </label>
              <h1 class="text-2xl font-semibold ml-2"></h1>
            </div>
          </div>
          <main class="flex-1 overflow-y-auto md:pt-4 pt-4 px-6 bg-base-200">
            <div class="card w-full p-6 bg-base-100 shadow-xl mt-2">
              <div class="text-xl font-semibold inline-block">Exam Detail</div>
              <div class="divider mt-2"></div>
              <div
                class="h-full w-full pb-6 bg-base-100 grid grid-cols-1 lg:grid-cols-3 gap-3"
              >
                <div class="card bg-base-100 w-full shadow-sm">
                  <div class="card-body">
                    <h2 class="card-title text-sm">Title</h2>
                    <h2 class="card-title"><%= quiz.title %></h2>
                  </div>
                </div>
                <div class="card bg-base-100 w-full shadow-sm">
                  <div class="card-body">
                    <h2 class="card-title text-sm">Mark</h2>
                    <h2 class="card-title"><%= quiz.mark %></h2>
                  </div>
                </div>
                <div class="card bg-base-100 w-full shadow-sm">
                  <div class="card-body">
                    <h2 class="card-title text-sm">Duration</h2>
                    <h2 class="card-title">
                      <%= quiz.durationMinutes %> Minutes
                    </h2>
                  </div>
                </div>
                <div class="card bg-base-100 w-full shadow-sm col-span-full">
                  <div class="card-body">
                    <h2 class="card-title text-sm">University List</h2>
                    <div class="grid grid-cols-1 lg:grid-cols-4 gap-3">
                      <% for( var i = 0;i < quiz.category.length; i++){%>
                      <h2 class="card-title"><%= quiz.category[i] %></h2>
                      <%}%>
                    </div>
                  </div>
                </div>
                <div class="card bg-base-100 w-full shadow-sm col-span-full">
                  <div class="card-body">
                    <h2 class="card-title text-sm">Description</h2>
                    <h2 class="card-title"><%= quiz.description %></h2>
                  </div>
                </div>
                <div class="card bg-base-100 w-full shadow-sm col-span-full">
                  <div class="card-body">
                    <h2 class="card-title text-sm">Quiz Count</h2>
                    <div class="grid grid-cols-1 lg:grid-cols-4 gap-3">
                      <h2 class="card-title"><%= quiz.quizCount %></h2>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-actions justify-end">
                <% if(!quiz.isPublished){%>
                <button class="btn btn-accent" onclick="publishedQuiz()">
                  Publish as Quiz
                </button>
                <%}%>
                <button class="btn btn-error" onclick="deleteQuiz()">
                  Delete
                </button>
                <a
                  href="/admin/quiz/update/<%= quiz._id %>"
                  class="btn btn-primary"
                  >Update</a
                >
              </div>
            </div>
            <div class="h-16"></div>
          </main>
        </div>
        <% include ../../partial/adminDrawer %>
      </div>
    </div>
  </body>
  <script src="/javascripts/jquery-3.7.1.min.js"></script>
  <script>
    function deleteQuiz() {
      if (!confirm("Are you sure you want to delete this quiz?")) {
        return;
      }
      $.ajax({
        url: "/admin/quiz/delete",
        type: "POST",
        data: {
          quizId: "<%= quiz._id %>",
        },
        success: function (response) {
          if (response.status === "success") {
            location.href = "/admin/quiz";
          } else {
            alert("Error deleting quiz");
          }
        },
        error: function () {
          alert("Error connecting to the server.");
        },
      });
    }

    function publishedQuiz() {
      if (!confirm("Are you sure you want to publish this quiz?")) {
        return;
      }
      $.ajax({
        url: "/admin/quiz/publishQuiz",
        type: "POST",
        data: {
          quizId: "<%= quiz._id %>",
        },
        success: function (response) {
          if (response.status === "success") {
            location.reload();
          } else {
            alert("Error publish exam");
          }
        },
        error: function () {
          alert("Error connecting to the server.");
        },
      });
    }
  </script>
</html>
