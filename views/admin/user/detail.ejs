<!DOCTYPE html>
<html data-theme="winter">
  <head>
    <title>Higher Eduction Access Prediction System</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div id="root">
      <div class="drawer lg:drawer-open">
        <input id="left-sidebar-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
          <div class="navbar sticky top-0 bg-base-100 z-10 shadow-md">
            <div class="flex-1">
              <label
                for="left-sidebar-drawer"
                class="btn btn-primary drawer-button lg:hidden"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                  class="h-5 inline-block w-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                  ></path>
                </svg>
              </label>
              <h1 class="text-2xl font-semibold ml-2"></h1>
            </div>
          </div>
          <main class="flex-1 overflow-y-auto md:pt-4 pt-4 px-6 bg-base-200">
            <div class="card w-full p-6 bg-base-100 shadow-xl mt-2">
              <div class="text-xl font-semibold inline-block">
                User Detail
                <div class="inline-block float-right">
                  <div class="inline-block float-right"></div>
                </div>
              </div>
              <div class="divider mt-2"></div>
              <div class="h-full w-full pb-6 bg-base-100">
                <div class="card bg-base-100 shadow-xl border border-gray-200">
                  <div class="card-body">
                    <div
                      class="flex flex-col md:flex-row items-center md:items-start gap-6"
                    >
                      <!-- Avatar -->
                      <div class="avatar">
                        <div
                          class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2"
                        >
                          <img
                            src="https://avatar.iran.liara.run/public"
                            alt="User Avatar"
                          />
                        </div>
                      </div>

                      <!-- User Info -->
                      <div class="flex-1">
                        <h2 class="text-2xl font-bold"><%= user.name %></h2>
                        <p class="text-gray-500">Email: <%= user.email %></p>
                        <!-- <p class="text-gray-500">Score: <%= user.score %></p> -->
                      </div>
                    </div>
                  </div>
                </div>
                <div
                  class="card bg-base-200 my-3 shadow-xl border border-gray-200"
                >
                  <!-- name of each tab group should be unique -->
                  <div class="tabs tabs-lift">
                    <input
                      type="radio"
                      name="my_tabs_3"
                      class="tab"
                      aria-label="Exam History"
                      checked="checked"
                    />
                    <div class="tab-content bg-base-100 border-base-300 p-6">
                      <div class="overflow-x-auto">
                        <table class="table table-zebra">
                          <!-- head -->
                          <thead>
                            <tr>
                              <th></th>
                              <th>Title</th>
                              <th>Exam Mark</th>
                              <th>Result Mark</th>
                              <th>Date</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for(var i = 0; i < examHistory.length;i++){%>
                            <tr>
                              <th><%= i+1 %></th>
                              <td><%= examHistory[i].exam.title %></td>
                              <td><%= examHistory[i].examMarks %></td>
                              <td><%= examHistory[i].totalMarks %></td>
                              <td>
                                <%= new
                                Date(examHistory[i].created).toLocaleDateString()
                                %>
                              </td>
                            </tr>
                            <%}%>
                          </tbody>
                        </table>
                      </div>
                    </div>

                    <input
                      type="radio"
                      name="my_tabs_3"
                      class="tab"
                      aria-label="Quiz History"
                    />
                    <div class="tab-content bg-base-100 border-base-300 p-6">
                      <div class="overflow-x-auto">
                        <table class="table table-zebra">
                          <!-- head -->
                          <thead>
                            <tr>
                              <th></th>
                              <th>Title</th>
                              <th>Quiz Mark</th>
                              <th>Result Mark</th>
                              <th>Date</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for(var i = 0; i < quizHistory.length;i++){%>
                            <tr>
                              <th><%= i+1 %></th>
                              <td><%= quizHistory[i].quiz.title %></td>
                              <td><%= quizHistory[i].quizMark %></td>
                              <td><%= quizHistory[i].totalMarks %></td>
                              <td>
                                <%= new
                                Date(quizHistory[i].created).toLocaleDateString()
                                %>
                              </td>
                            </tr>
                            <%}%>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="h-16"></div>
          </main>
        </div>
        <% include ../../partial/adminDrawer %>
      </div>
    </div>
  </body>
</html>
