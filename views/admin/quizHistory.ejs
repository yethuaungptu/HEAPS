<!DOCTYPE html>
<html data-theme="winter">
  <head>
    <title>Higher Eduction Access Prediction System</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div id="root">
      <div class="drawer lg:drawer-open">
        <input id="left-sidebar-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
          <div class="navbar sticky top-0 bg-base-100 z-10 shadow-md">
            <div class="flex-1">
              <label
                for="left-sidebar-drawer"
                class="btn btn-primary drawer-button lg:hidden"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                  class="h-5 inline-block w-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                  ></path>
                </svg>
              </label>
              <h1 class="text-2xl font-semibold ml-2"></h1>
            </div>
          </div>
          <main class="flex-1 overflow-y-auto md:pt-4 pt-4 px-6 bg-base-200">
            <div class="text-3xl text-center my-5">Exam History</div>
            <div class="overflow-x-auto card shadow-xl p-3 bg-base-100">
              <table class="table table-zebra">
                <!-- head -->
                <thead>
                  <tr>
                    <th></th>
                    <th>User</th>
                    <th>Title</th>
                    <th>Quiz Mark</th>
                    <th>Result Mark</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < quizHistory.length;i++){%>
                  <tr>
                    <th><%= i+1 %></th>
                    <td><%= quizHistory[i].user.name %></td>
                    <td><%= quizHistory[i].quiz.title %></td>
                    <td><%= quizHistory[i].quizMark %></td>
                    <td><%= quizHistory[i].answer.mark %></td>
                    <td>
                      <%= new Date(quizHistory[i].created).toLocaleDateString()
                      %>
                    </td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
            <div class="h-16"></div>
          </main>
        </div>
        <% include ../partial/adminDrawer %>
      </div>
    </div>
  </body>
</html>
